<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="#008577">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:src="@drawable/plus"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="178sp"
        android:text="Selamat Datang Di Keluarga"
        android:textColor="@android:color/white"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="212sp"
        android:text="Cinta Al-Qur'an"
        android:textColor="@android:color/white"
        android:textSize="20sp"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="217dp"
        android:src="@drawable/ic_home_black_24dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="32dp" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="220sp"
        android:layout_height="45sp"
        android:inputType="textEmailAddress"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="96dp"
        android:layout_marginBottom="208dp"
        android:hint="Email"
        android:backgroundTint="@android:color/white"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:singleLine="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="96dp" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="163dp"
        android:src="@drawable/ic_https_black_24dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="32dp" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="220sp"
        android:layout_height="45sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="97dp"
        android:layout_marginBottom="162dp"
        android:backgroundTint="@android:color/white"
        android:hint="Password"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:singleLine="true"
        android:inputType="textPassword"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="97dp" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="300sp"
        android:layout_height="40sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="79dp"
        android:text="LOGIN"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="#82FF00"/>

    <Button
        android:id="@+id/btn_sign"
        android:layout_width="300sp"
        android:layout_height="40sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="23dp"
        android:background="#1CB8F7"
        android:text="SIGN UP"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"/>

</RelativeLayout>